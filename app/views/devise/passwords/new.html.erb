<div class="row">
	<div class="col-xs-4">
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well"}) do |f| %>
      <fieldset>
        <legend>Forgot your password?</legend>
  		  <%= devise_error_messages! %>

        <%= f.input :email %>
        <%= f.button  :submit, "Reset password" %>
      </fieldset>
		<% end %>

		<%= render "devise/shared/links" %>
  </div>
</div>